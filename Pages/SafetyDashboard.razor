            </DashboardLayoutPanel>
            <DashboardLayoutPanel Column="5">
                <HeaderTemplate><div>Exposure Hours</div></HeaderTemplate>
                <ContentTemplate>

                    <!-- Exposure Hours -->
                    <div class="d-flex justify-content-center align-self-center">
                        <a id="ExposureHrstarget">
                            <SfCircularGauge Title="YTD x 1,000 HRS"
                                             Width="180px"
                                             Height="180px"
                                             Theme="default"
                                             CenterX="50%"
                                             CenterY="65%"
                                             Background="rgb(230,230,230)">
                                <CircularGaugeTitleStyle Color="black" FontWeight="regular" Size="14"></CircularGaugeTitleStyle>
                                <CircularGaugeAxes>
                                    <CircularGaugeAxis StartAngle="-90" EndAngle="90" Minimum="0" Maximum="1000" Radius="100%">
                                        <CircularGaugeAxisLineStyle Width="0.01" />
                                        <CircularGaugeAxisMajorTicks Interval="250"
                                                                     Color="black"
                                                                     Height="25"
                                                                     Width="1"
                                                                     Position="Syncfusion.Blazor.CircularGauge.Position.Inside"
                                                                     Offset="0.1">
                                        </CircularGaugeAxisMajorTicks>
                                        <CircularGaugeAxisMinorTicks Interval="1"
                                                                     Color="white"
                                                                     Height="0.1"
                                                                     Width="0.1" />
                                        <CircularGaugeAxisLabelStyle Position="Syncfusion.Blazor.CircularGauge.Position.Inside"
                                                                     Offset="-5">
                                            <CircularGaugeAxisLabelFont Color="black"
                                                                        Size="11px">
                                            </CircularGaugeAxisLabelFont>
                                        </CircularGaugeAxisLabelStyle>
                                        <CircularGaugePointers>
                                            <CircularGaugePointer Type="PointerType.RangeBar" Value=738 Radius="100%" Color="rgb(208,16,58)" PointerWidth="12" />
                                            <CircularGaugeRanges>
                                                <CircularGaugeRange Start="0" End="1000" Radius="100%" StartWidth="20" EndWidth="20" Color="rgb(0,106,142)" />
                                            </CircularGaugeRanges>
                                        </CircularGaugePointers>
                                        <CircularGaugeAnnotations>
                                            <CircularGaugeAnnotation Angle="180" Radius="0%" ZIndex="1">

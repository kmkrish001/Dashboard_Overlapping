<div class="flex-container mt-4">
    <SfDashboardLayout CellSpacing="@(new double[]{20 ,20 })" Columns="8" AllowResizing="true">
        <DashboardLayoutPanels>
            <DashboardLayoutPanel Column="2">
                <HeaderTemplate>
                    <div>MIR</div>
                </HeaderTemplate>
                <ContentTemplate>

                    <!-- MIR Medical Incident Rate -->
                    <div class="d-flex justify-content-center align-self-center">
                        <a id="MIRtarget">
                            <SfCircularGauge Title="Medical Incident Rate"
                                             Width="180px"
                                             Height="180px"
                                             Theme="default"
                                             CenterX="50%"
                                             CenterY="65%"
                                             Background="rgb(230,230,230)">
                                <CircularGaugeTitleStyle Color="black" FontWeight="regular" Size="14"></CircularGaugeTitleStyle>
                                <CircularGaugeAxes>
                                    <CircularGaugeAxis StartAngle="-90" EndAngle="90" Minimum="0.0" Maximum="2.0" Radius="100%">
                                        <CircularGaugeAxisLineStyle Width="0.01" />
                                        <CircularGaugeAxisMajorTicks Interval="0.5"
                                                                     Color="black"
                                                                     Height="25"
                                                                     Width="1"
                                                                     Position="Syncfusion.Blazor.CircularGauge.Position.Inside"
                                                                     Offset="0.1">
                                        </CircularGaugeAxisMajorTicks>
                                        <CircularGaugeAxisMinorTicks Width="0.01" />
                                        <CircularGaugeAxisLabelStyle Position="Syncfusion.Blazor.CircularGauge.Position.Inside"
                                                                     Offset="-5">
                                            <CircularGaugeAxisLabelFont Color="black"
                                                                        Size="11px">
                                            </CircularGaugeAxisLabelFont>
                                        </CircularGaugeAxisLabelStyle>
                                        <CircularGaugePointers>
                                            <CircularGaugePointer Type="PointerType.RangeBar" Value=0.81 Radius="100%" Color="rgb(208,16,58)" PointerWidth="12" />
                                            <CircularGaugeRanges>
                                                <CircularGaugeRange Start="0.0" End="2.0" Radius="100%" StartWidth="20" EndWidth="20" Color="rgb(0,106,142)" />
                                            </CircularGaugeRanges>
                                        </CircularGaugePointers>
                                        <CircularGaugeAnnotations>
                                            <CircularGaugeAnnotation Angle="180" Radius="0%" ZIndex="1">
                                                <ContentTemplate>
                                                    <div style="font-size:36px;margin-left:-66px;margin-top:10px; font-weight:bolder; color:black">
                                                        <img src="Images/MIR Icon Black.png" alt="MIR Icon" style="width:40px;height:40px;margin-bottom:5px;">
                                                        0.81
                                                    </div>
                                                </ContentTemplate>
                                            </CircularGaugeAnnotation>
                                        </CircularGaugeAnnotations>
                                    </CircularGaugeAxis>
                                </CircularGaugeAxes>
                            </SfCircularGauge>
                        </a>
                    </div>

                </ContentTemplate>
            </DashboardLayoutPanel>
            <DashboardLayoutPanel Column=3>
                <HeaderTemplate><div>Days Since Last Recordable</div></HeaderTemplate>

<!-- MIR Tool Tip -->
<SfTooltip ID="MIRTooltip"
           CssClass="customtip"
           MouseTrail=true
           Target="#MIRtarget"
           Content="@MIRContent"
           ShowTipPointer="true"
           Height="90px"
           Width="150px">
</SfTooltip>

<!-- Days Since Tool Tip -->
<SfTooltip ID="DaysSinceTooltip"
           CssClass="customtip"
           MouseTrail=true
           Target="#DaysSincetarget"
           Content="@DaysSinceContent"
           ShowTipPointer="true"
           Height="130px"
           Width="300px">
</SfTooltip>

<!-- KMs Driven Tool Tip -->
<SfTooltip ID="KMdrivenTooltip"
           CssClass="customtip"
           MouseTrail=true
           Target="#KMdriventarget"
